{
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"_posts/**/*.md\" \"*.{js,json}\"",
    "lint:eslint": "next lint",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"_posts/**/*.md\" \"*.{js,json}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:architecture": "depcruise --config .dependency-cruiser.js src",
    "test:all": "npm audit --audit-level=high && npm run quality && npm run test:architecture && npm run test:coverage && npm run test:e2e",
    "quality": "npm run lint && npm run type-check",
    "postinstall": "if [ -z \"$AWS_APP_ID\" ]; then npx playwright install --with-deps chromium firefox webkit; fi",
    "prepare": "husky"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "next": "^15.1.4",
    "next-seo": "^6.8.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-iframe": "^1.8.5",
    "react-modal": "^3.16.3",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.20",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/react-modal": "^3.16.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "dependency-cruiser": "^17.0.2",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-security": "^3.0.1",
    "happy-dom": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
